<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wpp.study">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recyclerview.RecyclerViewActivity"/>
        <activity android:name=".side.DrawerLayoutActivity"
            android:theme="@style/ActivityNoActionBar"/>
        <activity android:name=".side.NavigationActivity"/>
        <activity android:name=".transition.TransitionActivity"
            android:theme="@style/Transition"/>
        <activity android:name=".transition.ActivityB"
            android:theme="@style/Transition"/>
    </application>

</manifest>